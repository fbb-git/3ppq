
<script>
    var nr = 0;

    function validateForm() 
    {
        var name = document.forms["form"]["name"].value;
        var email = document.forms["form"]["email"].value;
        var nip = document.forms["form"]["nip"].value;
        var pwd = document.forms["form"]["pwd"].value;
        var pwd2 = document.forms["form"]["pwd2"].value;

        if (name == "" || email == "" || nip == "" || pwd == "" ||
            pwd2 == "")
        {
            alert("Alle velden moet zijn ingevuld");
            return false;
        }
        if (pwd != pwd2)
        {
            alert("De passwords zijn verschillend");
            return false;
        }
        return true;
    } 
</script>
</html>

<body> 


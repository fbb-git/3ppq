        form['lastName'].value = clients[nr][4];
        form['email'].value = clients[nr][5];
        form['login0'].value = clients[nr][2];
        form['action'].value = "Wijzigen";
    }

    function resetFields()
    {
        var form = document.forms["form"];

        form['ID'].value = 4;           // received from client.cc
        form['name'].value = "";
        form['lastName'].value = ""
        form['email'].value = "";
        form['login0'].value = 1950;    // received from client.cc
        form['action'].value = "Toevoegen";
        document.getElementById('check').style.display = 'none';
        return false;
    }

</script>

